S O L I D Principal:

S: Single responsibility


public class CustomerInfomarion{
	
	private static  CustomerInfomarion $getInfomarion=null;

	private __constactor(){

	}


	pulbic static CustomerInfomarion getCustomerInfomarion($getInfomarion){
	if($getInfomarion==null){

	 return new CustomerInfomarion();

	}
	return $getInfomarion;

	}
}


class Abcd{
	
	$obj=CustomerInfomarion::getCustomerInfomarion();

	echo $obj;

}

